<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dino's Tech Blog!</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src='https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.all.min.js'></script>
    <link href='https://cdn.jsdelivr.net/npm/sweetalert2@11.7.1/dist/sweetalert2.min.css' rel='stylesheet'/>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="min-h-screen bg-zinc-800 rounded">
      <header>
        {{!-- <h1 class="text-4xl">
          <a href="/">Dino's Tech Blog!</a>
        </h1> --}}
        <nav class="bg-sky-200 border-gray-200 px-2 sm:px-4 py-2.5 rounded dark:bg-gray-900">
          <div class="container flex flex-wrap justify-center md:justify-between mx-auto">
            <h1 class="text-4xl">
                <a href="/">Dino's Tech Blog!</a>
            </h1>
            <div class="w-full md:block md:w-auto" id="navbar-default">
              <ul class="flex flex-col justify-center p-4 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium md:border-0 md:bg-white">
                <li>
                  <a href="/" class="block text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0" aria-current="page">Home</a>
                </li>

                {{#if logged_in}}
                <li>
                  <a href="/dashboard" class="block text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Dashboard</a>
                </li>
                <li>
                  <a href="/newPost" class="block text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Create Post</a>
                </li>
               <li>
                  <button id="logout" class="block w-full text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">logout</button>
                </li> 
                {{else}}
                <li>
                  <a href="/login" class="block text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">login</a>
                </li>
                <li>
                  <a href="/signup" class="block text-center py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0">Sign Up</a>
                </li>
                {{/if}}
              </ul>
            </div>
          </div>
        </nav>
      </header>
      <main class="">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>
      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>